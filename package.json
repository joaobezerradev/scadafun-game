{
    "name": "pw-api-slim",
    "version": "1.0.0",
    "description": "Perfect World API using Slim Framework",
    "scripts": {
        "start": "npm run setup && php -S 0.0.0.0:8080 -t src",
        "start:dev": "npm run setup && php -S localhost:8080 -t src",
        "build": "composer install",
        "update": "composer update",
        "setup": "composer install && php -r \"copy('.env.example', '.env');\"",
        "dump-autoload": "composer dump-autoload"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/yourusername/pw-api-slim.git"
    },
    "keywords": [
        "perfect-world",
        "api",
        "slim",
        "php"
    ],
    "author": "Your Name",
    "license": "MIT",
    "engines": {
        "php": ">=7.4"
    }
}